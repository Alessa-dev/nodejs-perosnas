<table class="table table-striped">
    
    <thead class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cédula</th>
            <th>Edad</th>
            <th <%= tdhide %> >Opción</th>
        </tr>
    </thead>
    <tbody>
        <% personas.forEach(function(persona) { %>
            <tr>
                <td>
                    <%= persona.nombre %>
                </td>
                <td>
                    <%= persona.apellido %>
                </td>
                <td>
                    <%= persona.cedula %>
                </td>
                <td>
                    <%= persona.edad %>
                </td>
                <td <%= tdhide %> >
                    <a <%= edithide %> class="btn btn-info btn-sm" href="/editar/<%= persona.id %>">Editar</a> 
                    <a <%= deletehide %> class="btn btn-danger btn-sm" href="/eliminar/<%= persona.id %>">Eliminar</a>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>